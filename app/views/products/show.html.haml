= render 'toppage/header'
.item

  .item__box
    .item__box__name
      = @product.name
    .item__box__main
      .item__box__main__image
        = image_tag @image.image.to_s, size: "350x350"
      .item__box__main__sub  
        - @product.images.each.with_index do |image, index|
          = image_tag image.image_url, size: "150x150", class: "image-sub"
      
    .item__box__price
      .item__box__price__include
        = @product.price
      .item__box__price__fee
        .item__box__price__fee__tax
          税込
        .item__box__price__fee__postage
          送料込み
          












    .item__box__btn
      
      = link_to "#", class:"item__box__btn__bn" do
        購入画面に進む


    .item__box__information__table
      %table
        %tbody
          %tr
            %th 出品者
            %td  
              = link_to "#{@product.user.nickname}", user_path, class: "user-name-string"; 
          %tr
            %th カテゴリー
            %td 
              .item-category
                = link_to ">#{@category.parent.parent.name}",  categories_path, class: "user-name-string"; 
              %br
              .item-category
                = link_to ">#{@category.parent.name}", category_path, class: "user-name-string"; 
              %br 
              .item-category
                = link_to ">#{@category.name}",  category_path, class: "user-name-string"; 
                
          %tr
            %th 商品状態
            %td  
              .item-condition
                = @product.condition  
          %tr
            %th 配送元地域
            %td 
              .item-detail
                = @product.status
          %tr

    .item__box__detail
      = @product.detail

  .item__others
    = link_to "#" do
      "#{@product.user.nickname}"さんのその他の出品
